<script>
// Lấy tất cả các phần tử có class "options-icon"
const optionsIcons = document.querySelectorAll('.options-icon');

// Thêm sự kiện "click" vào từng phần tử
optionsIcons.forEach(icon => {
  icon.addEventListener('click', () => {
    const options = document.querySelector('.options');
    options.classList.add('show-options');
  });
});
function goToPage() {
    window.location.href = "/tuition/managmenttuition/collecttuition/invoice";
  }
</script>

