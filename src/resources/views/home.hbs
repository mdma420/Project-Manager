<div class="main-home">
    <div class="chart-tuition">
        <canvas id="myChart"></canvas>
    </div>
</div>

<!-- Thêm dòng script sau vào phía dưới phần body của trang HTML -->

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script> <!-- Bạn cần có thư viện moment.js -->

  <script>
    // Dữ liệu phần trăm và tên
    var data = {
      labels: ["name1", "name2", "name3"], // Thay thế bằng tên thực tế của bạn
      datasets: [{
        data: [25, 30, 45], // Thay thế bằng phần trăm thực tế của bạn
        backgroundColor: ["#ff5733", "#33ff57", "#5733ff"], // Màu sắc của các phần tử
      }]
    };

    // Cấu hình biểu đồ
    var options = {
      responsive: true,
      maintainAspectRatio: false,
    };

    // Tạo biểu đồ tròn
    var ctx = document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
      type: 'pie',
      data: data,
      options: options
    });
  </script>













